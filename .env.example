# ============================================
# Liberteko v0.8.1 - Configuration
# ============================================
# Copiez ce fichier vers .env et configurez les valeurs
# Premiere installation: npm run install:first

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=liberteko
DB_PORT=3306

# Server Configuration
PORT=3000
NODE_ENV=development
DISABLE_RATE_LIMIT=false

# Application
APP_NAME=Liberteko
APP_URL=http://localhost:3000

# ============================================
# SECURITE (OBLIGATOIRE - minimum 32 caracteres)
# ============================================
# Generez des secrets securises avec:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

JWT_SECRET=CHANGEZ_MOI_AVEC_UN_SECRET_DE_32_CARACTERES_MINIMUM
EMAIL_ENCRYPTION_KEY=CHANGEZ_MOI_AVEC_UN_SECRET_DE_32_CARACTERES_MINIMUM

# ============================================
# Structure (pour emails/PDF/SMS)
# ============================================
STRUCTURE_NOM=Mon Association
STRUCTURE_ADRESSE=123 rue des Jeux, 75000 Paris
STRUCTURE_EMAIL=contact@monasso.fr
STRUCTURE_TELEPHONE=01 23 45 67 89